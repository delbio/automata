{
  "name": "automaton-js",
  "version": "1.1.1",
  "description": "",
  "main": "dist/esm/index.js",
  "types": "dist/esm/types/index.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build:es5": "tsc -m commonjs --outDir ./dist/commonjs",
    "build:esm": "tsc -m es6 --outDir ./dist/esm",
    "build:umd": "webpack",
    "clean": "shx rm -rf dist && shx echo Done",
    "build": "npm run clean && npm run build:es5 && npm run build:esm && npm run build:umd",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "coverage": "npm test -- --coverage --no-cache",
    "coverage:watch": "npm run coverage -- --watch",
    "prepare": "npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/delbiolabs/automaton-js.git"
  },
  "author": "Fabio Del Bene <delbio87@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/node": "^8.0.54",
    "@types/webpack": "^3.8.1",
    "awesome-typescript-loader": "^3.4.1",
    "clean-webpack-plugin": "^0.1.17",
    "jest": "^21.2.1",
    "shx": "^0.2.2",
    "ts-jest": "^21.2.4",
    "typescript": "^2.6.2",
    "webpack": "^3.9.1",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {},
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/__tests__/",
      "/node_modules/"
    ],
    "testEnvironment": "node",
    "testRegex": "__tests__/.*\\.jest\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  }
}
